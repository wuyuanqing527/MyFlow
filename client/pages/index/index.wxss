/**index.wxss**/

.title {
  width: 96%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.userinfo {
  display: flex;
  background-color: gainsboro;
  width: 50%;
  height: 80rpx;
  flex-direction: row;
  align-items: center;
   border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.sort-by {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 50%;
  /* margin-left: 1rpx; */
  background-color: gainsboro;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.sort-by-bt {
  /* width: 120rpx; */
  height: 58rpx;
  line-height: 58rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
  /* margin-top: 10rpx; */
  background-color: lightgrey;
  border: 1rpx solid whitesmoke;
}

.userinfo-avatar {
  width: 58rpx;
  height: 58rpx;
   margin-left: 10rpx; 
  border-radius: 50%;
}

.userinfo-nickname {
  /* color: #aaa; */
  color: white;
}

.todolist {
  width: 100%;
  /* margin-top: 70rpx; */
  margin-bottom: 150rpx;
  background-color: white;
}

.thing_list {
  width: 96%;
  display: inline-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  /* padding-top: 4rpx; */
  background-color: whitesmoke;
  margin-top: 10rpx;
  margin-left: 2%;
  box-shadow: 6rpx 6rpx 4rpx lightgrey;
  /* border: 2rpx solid lightgrey; */
  border-radius: 25rpx;
}

.thing_item {
  /* width: 60%; */
  flex: auto;
  height: 100%;
  line-height: 80rpx;
  overflow: hidden;
  white-space: nowrap;
  font-size: 14pt;
  padding-left: 10rpx;
  background-color: lightgray;
  /* border-left: 2rpx solid grey; */
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.thing_contain_audio_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 14rpx;
  margin-right: 4rpx;
}

.thing_time {
  width: 380rpx;
  /* flex: 1; */
  height: 80rpx;
  line-height: 40rpx;
  font-size: 11pt;
  text-align: center;
  background-color: lightgray;
  /* border-right: 2rpx solid grey; */
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.thing_media {
  width: 380rpx;
  /* flex: 1; */
  height: 80rpx;
  line-height: 40rpx;
  font-size: 11pt;
  text-align: center;
  background-color: lightgray;
}

.add-view {
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0px;
  background-color: whitesmoke;
}

#addBt {
  width: 90%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  background-color: green;
  color: white;
  font-size: 14pt;
}

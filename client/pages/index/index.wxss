/**index.wxss**/

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.userinfo {
  display: flex;
  background-color: gainsboro;
  width: 50%;
  flex-direction: row;
  align-items: center;
}

.sort-by {
  display: flex;
  flex-direction: row;
  width: 50%;
  margin-left: 1rpx;
  background-color: gainsboro;
}

.sort-by-bt {
  /* width: 120rpx; */
  height: 58rpx;
  margin: 10rpx;
  font-size: 28rpx;
  text-align: center;
  background-color: lightgrey;
}

.userinfo-avatar {
  width: 58rpx;
  height: 58rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.todolist {
  width: 100%;
  /* margin-top: 70rpx; */
  margin-bottom: 150rpx;
}

.thing_list {
  width: 100%;
  display: inline-flex;
  padding-top: 2px;
}

.thing_item {
  width: 75%;
  height: 40px;
  line-height: 40px;
  overflow: hidden;
  font-size: 14pt;
  padding-left: 10rpx;
  background-color: whitesmoke;
}

.thing_time {
  width: 25%;
  height: 40px;
  line-height: 20px;
  font-size: 11pt;
  text-align: center;
  background-color: lightgray;
}

.add-view {
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0px;
  background-color: whitesmoke;
}

#addBt {
  width: 90%;
  margin-bottom: 10px;
  margin-top: 10px;
  background-color: green;
  color: white;
  font-size: 14pt;
}

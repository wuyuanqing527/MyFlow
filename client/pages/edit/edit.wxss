.input_thing_view {
  width: 100%;
  height: 100%;
  margin-top: 40rpx;
  background-color: whitesmoke;
}

#input_ting_box {
  width: 90%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  background-color: whitesmoke;
}

#input_thing_confirm {
  width: 90%;
  margin-top: 40rpx;
  background-color: green;
  color: white;
  font-size: 14pt;
}

.edit_item_text {
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;
  font-size: 14pt;
  text-align: center;
}

.input_thing_date_picker {
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  /* background-color: powderblue; */
  text-align: center;
  /* border: 1px solid gray; */
}

.input_thing_time_picker {
  width: 15%;
  height: 100rpx;
  line-height: 100rpx;
  display: inline-block;
  /* margin-left: 10px; */
  text-align: center;
  /* background-color: powderblue; *//* border: 1px solid gray; */
}

.switch_time_remind {
  width: 10%;
  height: 60%;
  display: inline-block;
  text-align: center;
  margin-left: 20rpx;
}

.priority-radio-group {
  width: 60%;
  line-height: 100rpx;
  height: 100rpx;
  margin-left: 40rpx;
  text-align: center;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
}

.priority-label {
  text-align: center;
}

.edit-media-view {
  height: 100rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.edit_media_label {
  text-align: center;
}

.edit-media-swiper {
  width: 100%;
  height: 300rpx;
}

.edit-media-swiper-item-view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-around; 
}

.recorder-progress {
  width: 80%;
  margin: 20rpx;
}

.audio-image {
  width: 100rpx;
  height: 100rpx;
}

.edit_media_confirm_bt {
  width: 80%;
  align-self: flex-end;
  margin-bottom: 20rpx;
}

.edit-media-photo {
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
  align-content: center;
}

.edit_media_location_text {
  width: 100%;
  margin: 20rpx;
  text-align: center;
}
